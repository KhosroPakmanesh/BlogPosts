@model MVCWebApplication.Models.OrderItem.DetailModel
@{
    ViewData["Title"] = "Order Item Detail";
}

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Order Item Detail</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title"></h5>
                        <h5 class="card-subtitle text-muted">The details of the order item is as follows</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="ProductName">Product Name</label>
                                <input asp-for="ProductName" type="text" class="form-control" disabled="disabled">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Quantity">Quantity</label>
                                <input asp-for="Quantity" type="text" class="form-control" disabled="disabled">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" type="text" class="form-control" disabled="disabled">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="Description">Price</label>
                                <textarea asp-for="Description" class="form-control" disabled="disabled" rows="5" cols="40"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-controller="Home" asp-action="Detail" asp-route-id="@Model.OrderId" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
