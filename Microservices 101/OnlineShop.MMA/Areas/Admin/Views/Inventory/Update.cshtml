@model OnlineShop.MMA.Areas.Admin.Models.Inventory.UpdateModel
@{
    ViewData["Title"] = "Inventory Update";
}

@section Styles{
    <link rel="stylesheet" href="~/back-office/css/font-awesome.css">
}

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Inventory Update</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form asp-controller="Inventory" asp-action="Update" method="post" class="form-horizontal" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input asp-for="IdInventory" type="hidden" />
                        <div class="card-header">
                            <h5 class="card-title"></h5>
                            <h5 class="card-subtitle text-muted">The details of the inventory is as follows</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Product</label>
                                    <select asp-for="ProductId" class="form-control select2"
                                            pf-validation-for="ProductId" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false
                                            asp-items="@Model.ProductSelectListItems">
                                    </select>
                                    <div pf-validation-for="ProductId" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Quantity">Quantity</label>
                                    <input asp-for="Quantity" type="text" placeholder="Quantity" class="form-control" pf-validation-for="Quantity" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                    <div pf-validation-for="Quantity" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Inventory" asp-action="Index" class="btn btn-primary">Back</a>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
{
    <script>
        $(".select2").select2({
            placeholder: 'Select items',
        }).change(function () {
            $(this).valid();
        });
    </script>
}