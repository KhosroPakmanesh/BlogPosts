@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model OnlineShop.MMA.Areas.Admin.Models.ShippingLeg.DetailModel
@{
    ViewData["Title"] = "Shipping Leg Detail";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<input id="RequestVerificationToken" type="hidden" value="@requestToken" />

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Shipping Leg Detail</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title"></h5>
                        <h5 class="card-subtitle text-muted">The details of the shipping leg is as follows</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="Address">Address</label>
                                <input asp-for="Address" type="text" class="form-control" disabled="disabled">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="IsShipped">Is Shipped</label>
                                <div class="custom-control custom-switch">
                                    <input asp-for="IsShipped" type="checkbox" class="custom-control-input" disabled="disabled">
                                    <label class="custom-control-label" for="IsShipped">Toggle this to switch the status</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-area="Admin" asp-controller="Shipping" asp-action="@Model.PreviousAction" asp-route-id="@Model.ShippingId" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
