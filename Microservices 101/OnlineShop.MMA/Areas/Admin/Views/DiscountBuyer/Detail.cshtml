@model OnlineShop.MMA.Areas.Admin.Models.DiscountBuyer.DetailModel
@{
    ViewData["Title"] = "Buyer with his discount Detail";
}

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Buyer with his discount Detail</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title"></h5>
                        <h5 class="card-subtitle text-muted">The details of the buyer with his discount is as follows</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label asp-for="BuyerUserName">Buyer UserName</label>
                                <input asp-for="BuyerUserName" type="text" class="form-control" disabled="disabled">
                            </div>
                            <div class="form-group col-md-6">
                                <label asp-for="IsUsed">Is Used</label>
                                <div class="custom-control custom-switch">
                                    <input asp-for="IsUsed" type="checkbox" class="custom-control-input" disabled="disabled">
                                    <label class="custom-control-label" for="IsUsed">Toggle this to switch the status</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <a asp-area="Admin" asp-controller="Discount" asp-action="@Model.PreviousAction" asp-route-id="@Model.DiscountId" class="btn btn-primary">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
