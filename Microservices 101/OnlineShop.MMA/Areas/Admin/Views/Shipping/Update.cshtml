@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model OnlineShop.MMA.Areas.Admin.Models.Shipping.UpdateModel
@{
    ViewData["Title"] = "Shipping Update";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<input id="RequestVerificationToken" type="hidden" value="@requestToken" />

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Shipping Update</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form asp-area="Admin" asp-controller="Shipping" asp-action="Update" method="post" class="form-horizontal" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <input asp-for="IdShipping" type="hidden" />
                        <input asp-for="OrderId" type="hidden" />
                        <input asp-for="BuyerUserName" type="hidden" />
                        <div class="card-header">
                            <h5 class="card-title"></h5>
                            <h5 class="card-subtitle text-muted">The details of the shipping is as follows</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label asp-for="OrderId">Order Id</label>
                                    <input asp-for="OrderId" type="text" class="form-control" disabled="disabled">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="BuyerUserName">Buyer User Name</label>
                                    <input asp-for="BuyerUserName" type="text" class="form-control" disabled="disabled">
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="IsShipped">Is Shipped</label>
                                    <div class="custom-control custom-switch">
                                        <input asp-for="IsShipped" type="checkbox" class="custom-control-input" pf-validation-for="IsShipped" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                        <label class="custom-control-label" for="IsShipped">Toggle this to switch the status</label>
                                    </div>
                                    <div pf-validation-for="IsShipped" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Shipping" asp-action="Index" class="btn btn-primary">Back</a>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-footer">
                        <h5 class="card-title"></h5>
                        <h5 class="card-subtitle text-muted">Shipping legs are as follows</h5>
                    </div>
                    <div class="card-footer">
                        <span class="float-end">
                            <a asp-area="Admin" asp-controller="ShippingLeg" asp-action="Create" asp-route-id="@Model.IdShipping" ro class="btn btn-primary btn-md text-white">Create</a>
                        </span>
                    </div>
                    <div class="card-footer">
                        <table id="datatables-basic" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id ShippingLeg</th>
                                    <th>shipping Id</th>
                                    <th>address</th>
                                    <th>Is Shipped</th>
                                    <th data-orderable="false">Operations</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            $("#datatables-basic").DataTable({
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Admin/ShippingLeg/GetShippingLegs",
                    "type": "POST",
                    "datatype": "json",
                    'beforeSend': function (request) {
                        request.setRequestHeader("RequestVerificationToken",
                            document.getElementById("RequestVerificationToken").value);
                    },
                    'data': {
                        parentId: '@Model.IdShipping'
                    }
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false,
                    },
                    {
                        "targets": [1],
                        "visible": false,
                        "searchable": false,
                    }],
                "order": [[0, 'desc']],
                "columns": [
                    { "data": "idShippingLeg", "name": "idShippingLeg", "autoWidth": true },
                    { "data": "shippingId", "name": "ShippingId", "autoWidth": true },
                    { "data": "address", "name": "Address", "autoWidth": true },
                    { "data": "isShipped", "name": "IsShipped", "autoWidth": true },
                    {
                        "render": function (data, type, row) {
                            return `<a href="/Admin/Shipping/${row.shippingId}/ShippingLeg/Detail/${row.idShippingLeg}?previousPage=update">
                                        <i class='align-middle mr-2 far fa-fw fa-list-alt'> </i>
                                    </a>
                                    <a href="/Admin/Shipping/${row.shippingId}/ShippingLeg/Update/${row.idShippingLeg}">
                                        <i class='align-middle mr-2 far fa-fw fa-edit'> </i>
                                    </a>
                                    <a href="/Admin/Shipping/${row.shippingId}/ShippingLeg/Delete/${row.idShippingLeg}">
                                        <i class='align-middle mr-2 far fa-fw fa-trash-alt'> </i>
                                    </a>`
                        }
                    },
                ]
            });
        });
    </script>

</main>
