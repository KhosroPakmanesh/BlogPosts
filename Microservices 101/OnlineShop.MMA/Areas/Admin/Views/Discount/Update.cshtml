@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@model OnlineShop.MMA.Areas.Admin.Models.Discount.UpdateModel
@{
    ViewData["Title"] = "Discount Update";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<input id="RequestVerificationToken" type="hidden" value="@requestToken" />

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Discount Update</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form asp-controller="Discount" asp-action="Update" method="post" class="form-horizontal" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input asp-for="IdDiscount" type="hidden" />
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="card-header">
                            <h5 class="card-title"></h5>
                            <h5 class="card-subtitle text-muted">The details of the discount is as follows</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                @* <div class="form-group col-md-6">
                                    <label>Buyers</label>
                                    <select asp-for="BuyerIds" class="form-control select2"
                                            multiple="multiple"
                                            pf-validation-for="BuyerIds" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false
                                            asp-items="@Model.BuyerSelectListItems">
                                    </select>
                                    <div pf-validation-for="BuyerIds" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div> *@
                                <div class="form-group col-md-6">
                                    <label asp-for="Voucher">Voucher</label>
                                    <input asp-for="Voucher" type="text" placeholder="Voucher" class="form-control" pf-validation-for="Voucher" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                    <div pf-validation-for="Voucher" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="ReductionPercentage">Reduction Percentage</label>
                                    <input asp-for="ReductionPercentage" type="text" placeholder="ReductionPercentage" class="form-control" pf-validation-for="ReductionPercentage" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                    <div pf-validation-for="ReductionPercentage" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                                @* <div class="form-group col-md-6">
                                    <label asp-for="IsUsed">Is Used</label>
                                    <div class="custom-control custom-switch">
                                        <input asp-for="IsUsed" type="checkbox" class="custom-control-input" pf-validation-for="IsUsed" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                        <label class="custom-control-label" for="IsUsed">Toggle this to switch the status</label>
                                    </div>
                                    <div pf-validation-for="IsUsed" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div> *@
                            </div>
                        </div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Discount" asp-action="Index" class="btn btn-primary">Back</a>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid p-0">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title"></h5>
                        <h5 class="card-subtitle text-muted">Buyers with this discount are as follows</h5>
                    </div>
                    <div class="card-header">
                        <span class="float-end">
                            <a asp-area="Admin" asp-controller="DiscountBuyer" asp-action="Create" asp-route-id="@Model.IdDiscount" ro class="btn btn-primary btn-md text-white">Create</a>
                        </span>
                    </div>
                    <div class="card-body">
                        <table id="datatables-basic" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Discount Id</th>
                                    <th>Buyer Id</th>
                                    <th>Buyer UserName</th>
                                    <th>Is Used</th>
                                    <th data-orderable="false">Operations</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
{
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            $("#datatables-basic").DataTable({
                "responsive": true,
                "processing": true,
                "serverSide": true,
                "filter": true,
                "ajax": {
                    "url": "/Admin/DiscountBuyer/GetDiscountBuyers",
                    "type": "POST",
                    "datatype": "json",
                    'beforeSend': function (request) {
                        request.setRequestHeader("RequestVerificationToken",
                            document.getElementById("RequestVerificationToken").value);
                    },
                    'data': {
                        parentId: '@Model.IdDiscount'
                    }
                },
                "columnDefs": [
                    {
                        "targets": [0],
                        "visible": false,
                        "searchable": false,
                    },
                    {
                        "targets": [1],
                        "visible": false,
                        "searchable": false,
                    }],
                "order": [[0, 'desc']],
                "columns": [
                    { "data": "discountId", "name": "DiscountId", "autoWidth": true },
                    { "data": "buyerId", "name": "BuyerId", "autoWidth": true },
                    { "data": "buyerUserName", "name": "BuyerUserName", "autoWidth": true },
                    { "data": "isUsed", "name": "IsUsed", "autoWidth": true },
                    {
                        "render": function (data, type, row) {
                            return `<a href="/Admin/Discount/${row.discountId}/DiscountBuyer/Detail/${row.buyerId}?previousPage=update">
                                        <i class='align-middle mr-2 far fa-fw fa-list-alt'> </i>
                                    </a>
                                            <a href="/Admin/Discount/${row.discountId}/DiscountBuyer/Update/${row.buyerId}">
                                        <i class='align-middle mr-2 far fa-fw fa-edit'> </i>
                                    </a>
                                            <a href="/Admin/Discount/${row.discountId}/DiscountBuyer/Delete/${row.buyerId}">
                                        <i class='align-middle mr-2 far fa-fw fa-trash-alt'> </i>
                                    </a>`
                        }
                    },
                ]
            });
        });

        $(".select2").select2({
            placeholder: 'Select items',
        }).change(function () {
            $(this).valid();
        });
    </script>
}