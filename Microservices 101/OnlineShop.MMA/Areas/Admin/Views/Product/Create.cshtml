
@model OnlineShop.MMA.Areas.Admin.Models.Product.CreateModel
@{
    ViewData["Title"] = "Product Create";
}

@section Styles{
    <link rel="stylesheet" href="~/back-office/css/font-awesome.css">
}

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Product Create</h1>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <form asp-controller="Product" asp-action="Create" method="post" class="form-horizontal" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <div class="card-header">
                            <h5 class="card-title"></h5>
                            <h5 class="card-subtitle text-muted">The details of the product is as follows</h5>
                        </div>
                        <div class="card-body">
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label>Product Type</label>
                                    <select asp-for="ProductTypeId" class="form-control select2"
                                            pf-validation-for="ProductTypeId" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false
                                            asp-items="@Model.ProductTypeSelectListItems">
                                    </select>
                                    <div pf-validation-for="ProductTypeId" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Name">Name</label>
                                    <input asp-for="Name" type="text" placeholder="Name" class="form-control" pf-validation-for="Name" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                    <div pf-validation-for="Name" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Price">Price</label>
                                    <input asp-for="Price" type="text" placeholder="Price" class="form-control" pf-validation-for="Price" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                    <div pf-validation-for="Price" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                                <div class="form-group col-md-6">
                                    <label asp-for="Description">Description</label>
                                    <input asp-for="Description" type="text" placeholder="Description" class="form-control" pf-validation-for="Description" pf-validationerror-class="is-invalid" pf-adderrormessage-flag=false>
                                    <div pf-validation-for="Description" pf-validationerror-class="invalid-feedback" pf-adderrormessage-flag=true></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                        <div class="card-footer">
                            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-primary">Back</a>
                            <button type="submit" class="btn btn-primary">
                                Submit
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts
{

    <script>
        $(".select2").select2({
            placeholder: 'Select items',
        }).change(function () {
            $(this).valid();
        });
    </script>
}