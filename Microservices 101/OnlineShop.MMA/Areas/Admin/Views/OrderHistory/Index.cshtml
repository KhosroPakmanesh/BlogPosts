@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Services";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<input id="RequestVerificationToken" type="hidden" value="@requestToken" />

<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3">Services</h1>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<span class="float-end">
                            <a asp-area="Admin" asp-controller="Service" asp-action="Create" class="btn btn-primary btn-md text-white">Create</a>
                        </span>
					</div>
					<div class="card-body">
                        <table id="datatables-basic" class="table table-striped table-bordered" style="width:100%">
							<thead>
								<tr>
                                    <th>Id</th>
                                    <th>Title</th>
                                    <th>Importance Order</th>
                                    <th data-orderable="false">Is Publishable</th>                                   
                                    <th data-orderable="false">Operations</th>
								</tr>
							</thead>
						</table>
					</div>
				</div>
			</div>
		</div>
         
        <script>
            document.addEventListener("DOMContentLoaded", function(event) {
                $("#datatables-basic").DataTable({
                    "responsive": true,
                    "processing": true,
                    "serverSide": true,
                    "filter": true,
                    "ajax": {
                        "url": "/Admin/Service/GetServices",
                        "type": "POST",
                        "datatype": "json",
                        'beforeSend': function (request) {
                            request.setRequestHeader("RequestVerificationToken",
                                document.getElementById("RequestVerificationToken").value);
                        }
                    },
                    "columnDefs": [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false,
                    }],
                    "columns": [
                        { "data": "idService", "name": "IdService", "autoWidth": true },
                        { "data": "title", "name": "Title", "autoWidth": true },
                        { "data": "importanceOrder", "name": "ImportanceOrder", "autoWidth": true },
                        { "data": "isPublishable", "name": "IsPublishable", "autoWidth": true },
                        {
                            "render": function (data, type, row) {
                                return `<a href='service/detail/${row.idService}'>
                                            <i class='align-middle mr-2 far fa-fw fa-list-alt'></i>
                                        </a>
                                        <a href = 'service/update/${row.idService}'>
                                            <i class='align-middle mr-2 far fa-fw fa-edit'></i>
                                        </a>
                                        <a href = 'service/delete/${row.idService}'>
                                            <i class='align-middle mr-2 far fa-fw fa-trash-alt'></i>
                                        </a>
                                        <a href = '/servicecenter/service/index/${row.idService}'>
                                            <i class='align-middle mr-2 fas fa-fw fa-arrow-right'></i>
                                        </a>`
                            }
                        },
                    ]
                });
            });
        </script>
	</div>
</main>