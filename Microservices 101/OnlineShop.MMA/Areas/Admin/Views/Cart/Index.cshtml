@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
@{
    ViewData["Title"] = "Carts";
    var requestToken = Antiforgery.GetAndStoreTokens(Context).RequestToken;
}
<input id="RequestVerificationToken" type="hidden" value="@requestToken" />

<main class="content">
    <div class="container-fluid p-0">
        <h1 class="h3 mb-3">Carts</h1>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <table id="datatables-basic" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Buyer UserName</th>
                                    <th>Discount Voucher</th>
                                    <th data-orderable="false">Operations</th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <script>
            document.addEventListener("DOMContentLoaded", function (event) {
                $("#datatables-basic").DataTable({
                    "responsive": true,
                    "processing": true,
                    "serverSide": true,
                    "filter": true,
                    "ajax": {
                        "url": "/Admin/Cart/GetCarts",
                        "type": "POST",
                        "datatype": "json",
                        'beforeSend': function (request) {
                            request.setRequestHeader("RequestVerificationToken",
                                document.getElementById("RequestVerificationToken").value);
                        }
                    },
                    "columnDefs": [{
                        "targets": [0],
                        "visible": false,
                        "searchable": false,
                    }],
                    "columns": [
                        { "data": "idCart", "name": "IdCart", "autoWidth": true },
                        { "data": "buyerUserName", "name": "BuyerUserName", "autoWidth": true },
                        { "data": "discountVoucher", "name": "DiscountVoucher", "autoWidth": true },
                        {
                            "render": function (data, type, row) {
                                return `<a href='Cart/detail/${row.idCart}'>
                                        <i class='align-middle mr-2 far fa-fw fa-list-alt'></i>
                                    </a>
                                    <a href = 'Cart/delete/${row.idCart}'>
                                        <i class='align-middle mr-2 far fa-fw fa-trash-alt'></i>
                                    </a>`
                            }
                        },
                    ]
                });
            });
        </script>
    </div>
</main>
