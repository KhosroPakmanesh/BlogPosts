@page
@using OnlineShop.MMA.Areas.Identity.Pages;
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<section class="module">
	<div class="container">
		<div class="row">
			<div class="col-md-4 m-auto">
                <form method="post">
				    <div class="up-form">					
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
                            <input asp-for="Input.Email" type="text" class="form-control form-control-lg" placeholder="Email">
                            <span asp-validation-for="Input.Email" class="text-danger" style="font-size:12px;"></span>
						</div>
						<div class="form-group">
                            <input asp-for="Input.Password" type="password" class="form-control form-control-lg" placeholder="Pasword">
                            <span asp-validation-for="Input.Password" class="text-danger" style="font-size:12px;"></span>
						</div>
						<div class="form-group">
							<button id="submitButton" class="btn btn-block btn-lg btn-round btn-brand" type="submit">Log in</button>
						</div>					
				    </div>
				    <div class="up-help">
						<p>
							<input asp-for="Input.RememberMe" class="form-check-input" />
							<label class="form-check-label" for="inlineFormCheck">
								Remember me?
							</label>
						</p>
					</div>
                </form>
			</div>
		</div>
	</div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
